{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "testPathIgnorePatterns": ["<rootDir>/test/"],
    "transform": {
        "^.+\\.(t)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^src/(.*)": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": ["<rootDir>/jest-matchers/toThrowErrorObject.js"]
}
